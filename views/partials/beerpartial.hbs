<div class="col-md-4 d-flex justify-content-center">

    <figure class="oneBottle">

        <a title="{{name}}" href="/beer/beer-{{id}}"><img src="{{image_url}}" alt="beer {{name}} dont have image"></a>
    </figure>
</div>

<div class="col-md-6">
    <article class="oneBeer">
        <h2>{{name}}</h2>

        <p>{{description}}</p>

        <h3>Food pairing</h3>

        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewer Tips: </strong>{{brewers_tips}}</p>
    </article>
</div>